# SQL Parrot Environment Variables
# Copy this file to .env and customize for your environment
# NEVER commit .env to git!

# SQL Server Connection (REQUIRED)
# IMPORTANT: The user must have specific permissions for snapshot operations
# See README.md for detailed permission requirements
SQL_SERVER=host.docker.internal  # This is the equivalent of "host's localhost"
SQL_PORT=1433
SQL_USERNAME=your_username_here  # Must have dbcreator + sysadmin roles OR custom permissions
SQL_PASSWORD=your_password_here
SQL_TRUST_CERTIFICATE=true

# Application Settings
NODE_ENV=production
PORT=3000

# Application Ports (configurable - defaults shown)
# These ports are used by the start/stop batch files
SQL_PARROT_BACKEND_PORT=3000
SQL_PARROT_FRONTEND_PORT=3000  # The frontend port is what you'll open with your browser

# Snapshot Storage Path (for SQL Server commands)
# For Windows: use C:\Snapshots or whatever you want.
# For Docker/Linux: use /var/opt/mssql/snapshots (recommended)
# Note: For Docker, you MUST use a Docker Volume, you cannot use a bind mount.
SNAPSHOT_PATH=/var/opt/mssql/snapshots

# User identification for audit trail (REQUIRED)
# This helps track who created/modified snapshots in multi-user environments
SQLPARROT_USER_NAME=your_name_here

# UI Password Protection (OPTIONAL)
# Set a password to protect SQL Parrot UI access
# If not set, first user to access UI can set password or skip
# If password already set via UI, this env var will be ignored
UI_PASSWORD=your_ui_password_here

