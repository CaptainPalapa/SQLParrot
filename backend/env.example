# SQL Parrot Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# SQL Server Connection (sensitive data)
SQL_SERVER=localhost
SQL_PORT=1433
SQL_USERNAME=your_username_here
SQL_PASSWORD=your_password_here
SQL_TRUST_CERTIFICATE=true

# Application Settings
NODE_ENV=development
PORT=3001

# Snapshot Storage Path
# For Windows: use C:\Snapshots (default)
# For Docker/Linux: use /var/opt/mssql/snapshots
SNAPSHOT_PATH=C:\Snapshots

# External File Management API (N8N Webhook)
# Used for managing physical snapshot files when SQL Server can't access them directly
FILES_API_USERNAME=your_files_api_username
FILES_API_PASSWORD=your_files_api_password
FILES_API_LIST=https://r8.belden-tech.com/webhook/sqlserver/snapshots/
FILES_API_DELETE=https://r8.belden-tech.com/webhook/sqlserver/snapshots/delete/{{filename}}
